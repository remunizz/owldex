{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "cjs",
    "declarationDir": "types",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "lib/types/*"]
    }
  },
  "include": ["./lib/**/*"],
  "exclude": ["node_modules", "**/*.test.js", "__tests__"]
}
